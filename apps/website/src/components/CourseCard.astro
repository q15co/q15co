---
import { LinkCard } from "@astrojs/starlight/components";

interface Props {
  title: string;
  description: string;
  href: string;
  lang?: string;
}

const { href, lang, ...props } = Astro.props;

const localeHref = lang ? `/${lang}${href}` : href;
---

<LinkCard {...props} href={localeHref} hreflang={lang} />
